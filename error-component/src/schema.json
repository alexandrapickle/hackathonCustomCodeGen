{
  "$schema": "http://json-schema.org/schema",
  "title": "Error",
  "type": "object",
  "description": "Error component",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of component",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "errorMessage": {
      "type": "string",
      "description": "Error message text",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    }
  },
  "required": ["name", "errorMessage"]
}
